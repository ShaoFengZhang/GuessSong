.bg {
    position: relative;
    overflow: hidden;
}

.topbg {
    width: 100%;
    height: 300rpx;
    background-color: #d1c4e9;
}

.usermoneybox {
    width: 580rpx;
    height: 450rpx;
    margin: -165rpx auto 0;
    background-color: rgba(179, 157, 219, 1);
    border-radius: 20rpx;
    box-shadow: 9rpx 0rpx 15rpx rgba(0, 0, 0, 0.2);
    overflow: hidden;
    box-sizing: border-box;
}

.thetext {
    width: 100%;
    text-align: center;
    font-size: 48rpx;
    font-family: PingFang-SC-Medium;
    color: #3b3b3b;
    margin-top: 62rpx;
}

.userdoller {
    width: 100%;
    text-align: center;
    color: #ff3d00;
    font-size: 80rpx;
    margin-top: 42rpx;
}

.internum {
    width: 499rpx;
    height: 70rpx;
    margin: 32rpx auto 0;
    border-bottom: 2rpx solid #000;
    position: relative;
}

.inputplace {
    color: #3b3b3b;
    font-size: 30rpx;
    text-align: left;
}

input {
    width: 380rpx;
    height: 70rpx;
    text-align: center;
}

.prompt {
    width: 100%;
    text-align: center;
    font-size: 20rpx;
    color: #3a3a3a;
    margin-top: 22rpx;
}

.alldraw {
    width: 120rpx;
    height: 40rpx;
    color: #ff3d00;
    font-size: 30rpx;
    position: absolute;
    top: 14rpx;
    right: 0;
}

.drawbtn {
    width: 530rpx;
    height: 90rpx;
    background: rgba(102, 52, 156, 1);
    border-radius: 45rpx;
    text-align: center;
    color: #fff;
    font-size: 50rpx;
    line-height: 90rpx;
    margin: 78rpx auto 0;
}

.drawbotad {
    width: 750rpx;
    position: absolute;
    left: 0;
    bottom: 0;
}

.drawbotad image {
    width: 750rpx;
    height: 180rpx;
}

.detial {
    width: 120rpx;
    height: 50rpx;
    background: rgba(95, 95, 95, 0.3);
    border-radius: 15rpx;
    font-size: 20rpx;
    color: rgba(95, 95, 95, 1);
    text-align: center;
    line-height: 50rpx;
    float: right;
    margin-top: 30rpx;
}

.deawADBox {
    width: 650rpx;
    height: 700rpx;
    position: absolute;
    top: 135rpx;
    left: 50rpx;
}

.deawADBox image {
    width: 650rpx;
    height: 700rpx;
    z-index: 10;
}
