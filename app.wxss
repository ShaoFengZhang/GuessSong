page {
    width: 100%;
    height: 100vh;
}

.bg {
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
    background-size: cover;
    padding: 0vh 0 0 0;
    background-repeat: no-repeat;
    background-origin: border-box;
}

.header {
    width: 100%;
    height: 128rpx;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

button::after {
    border: none;
}

.breath {
    animation: breath 1.5s ease-in-out infinite;
}

.btnbreath {
    animation: breath 2.5s ease-in-out infinite;
}

@keyframes breath {
    0% {
        transform: scale(0.8);
    }

    80% {
        transform: scale(1);
    }

    100% {
        transform: scale(0.8);
    }
}

.botad {
    width: 750rpx;
    height: 180rpx;
    position: absolute;
    left: 0;
    bottom: 0;
}

.botad image {
    width: 750rpx;
    height: 180rpx;
}
